<div class="question col-sm-12">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="title">{{ slide.extraFields['question'] }}</h4>
            </div>
            <div class="col-sm-12">
                {% for answer in slide.extraFields['answers'] %}
                    <div class="row answer">
                        <div class="col-sm-9 answer">{{ loop.index }}) {{ answer['answer'] }}</div>
                        <div class="col-sm-3">
                            <div class="checkbox">
                                <input class="radio" type="checkbox" value="{{ answer['answer'] }}"
                                       id="q_{{ question is defined ? question : 1 }}_a_{{ loop.index }}" {% if answer['correct'] == "true" %}checked{% endif %}>
                                <label for="q_{{ question is defined ? question : 1 }}_a_{{ loop.index }}"></label>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
