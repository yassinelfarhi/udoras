{% extends 'base.html.twig' %}
{% set passed = trainingState.isPassed %}
{% block content %}
    <div class="profile">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <h3 class="text-center">
                    {{ trainingProgram.title|training_name_format|nl2br }}
                </h3>
            </div>
            <div class="col-sm-3 text-right">
                {% if passed %}
                    <a class="btn btn-lg btn-shadow"
                       href="{{ path('employee_certificate',{employeeTrainingState:trainingState.id}) }}">View
                        Certificate</a>
                {% endif %}
                <a class="btn btn-lg btn-grey btn-shadow" href="{{ url('index_employee') }}">Requests</a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <div class="container-fluid">
                    {% if passed %}
                        <p>
                            Congratulations, you have completed the Training!
                        </p>
                    {% else %}
                        <p>
                            Unfortunately, you haven't passed the Training
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
        {% if passed %}
            <div class="row">
                <div class="col-sm-offset-4 col-sm-4">
                    <div class="container-fluid">

                        <div class="row">
                            <p class="col-sm-6 profile-header">
                                Result
                            </p>
                            <p class="col-sm-6">
                                {{ trainingState.ratio }}%
                            </p>
                        </div>
                        <div class="row">
                            <p class="col-sm-6 profile-header">
                                Status
                            </p>

                            <p class="col-sm-6 text-success">
                                Passed
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-sm-offset-4 col-sm-6">
                    <div class="container-fluid">

                        <div class="row">
                            <p class="col-sm-6 profile-header">
                                Result
                            </p>
                            <p class="col-sm-6">
                                {{ trainingState.ratio|number_format(0) }}%
                            </p>
                        </div>
                        <div class="row">
                            <p class="col-sm-6 profile-header">
                                Status
                            </p>
                            <p class="col-sm-6 text-danger">
                                Failed
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

